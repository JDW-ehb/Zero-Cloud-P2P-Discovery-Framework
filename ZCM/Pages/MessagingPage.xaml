<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ZCM.ViewModels"
    xmlns:conv="clr-namespace:ZCM.Converters"
    x:Class="ZCM.Pages.MessagingPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:BoolToColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label
            Text="Messaging"
            FontSize="24"
            TextColor="White" />

        <!-- STATUS -->
        <Label
            Text="{Binding StatusMessage}"
            FontSize="12"
            TextColor="LightGray" />

        <!-- HOST -->
        <Button
            Text="Start Hosting"
            Command="{Binding HostCommand}"
            BackgroundColor="{Binding IsHosting, Converter={StaticResource BoolToColorConverter}}"
            TextColor="White" />

        <!-- PEER SELECT -->
        <Picker
            Title="Select peer"
            ItemsSource="{Binding AvailablePeers}"
            ItemDisplayBinding="{Binding HostName}"
            SelectedItem="{Binding SelectedPeer}" />

        <!-- CONNECT -->
        <Button
            Text="Connect"
            Command="{Binding ConnectCommand}"
            BackgroundColor="#6B5DD3"
            TextColor="White" />

        <!-- MESSAGES -->
        <CollectionView ItemsSource="{Binding Messages}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Padding="10"
                        Margin="5"
                        BackgroundColor="#2A2A2A">
                        <Label
                            Text="{Binding Content}"
                            TextColor="White" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- INPUT -->
        <Grid ColumnDefinitions="*,Auto">
            <Entry
                Grid.Column="0"
                Text="{Binding OutgoingMessage}"
                Placeholder="Type a message..." />

            <Button
                Grid.Column="1"
                Text="Send"
                Command="{Binding SendMessageCommand}" />
        </Grid>

    </VerticalStackLayout>
</ContentPage>
