<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:ZCM.Converters"
    x:Class="ZCM.Pages.MessagingPage"
    BackgroundColor="#1e1e1e">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:BoolToColorConverter x:Key="BoolToColorConverter" />
            <conv:BoolToLayoutConverter x:Key="BoolToLayoutConverter" />
            <conv:ChatTimestampConverter x:Key="ChatTimestampConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="320,*">

        <!-- LEFT: conversations -->
        <Grid Grid.Column="0"
              RowDefinitions="Auto,Auto,*"
              Padding="16"
              BackgroundColor="#151515">

            <Label Text="Messaging"
                   FontSize="22"
                   TextColor="White" />

            <Label Grid.Row="1"
                   Margin="0,10"
                   Text="{Binding StatusMessage}"
                   FontSize="12"
                   TextColor="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}" />

            <CollectionView Grid.Row="2"
                            ItemsSource="{Binding Conversations}"
                            SelectionMode="Single"
                            SelectionChanged="OnConversationSelectionChanged">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="12"
                               Margin="0,6"
                               CornerRadius="14"
                               HasShadow="False"
                               BackgroundColor="#1F1F1F">

                            <Grid ColumnDefinitions="Auto,*,Auto"
                                  RowDefinitions="Auto,Auto">

                                <BoxView WidthRequest="10"
                                         HeightRequest="10"
                                         CornerRadius="5"
                                         VerticalOptions="Center"
                                         Color="{Binding IsOnline, Converter={StaticResource BoolToColorConverter}}" />

                                <Label Grid.Column="1"
                                       Text="{Binding DisplayName}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="White" />

                                <Label Grid.Column="2"
                                       Text="{Binding LastTimestamp, Converter={StaticResource ChatTimestampConverter}}"
                                       FontSize="11"
                                       TextColor="#AAAAAA"
                                       HorizontalOptions="End" />

                                <Label Grid.Row="1"
                                       Grid.Column="1"
                                       Grid.ColumnSpan="2"
                                       Text="{Binding LastMessage}"
                                       FontSize="12"
                                       TextColor="#CCCCCC"
                                       LineBreakMode="TailTruncation" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </Grid>

        <!-- RIGHT: chat -->
        <Grid Grid.Column="1"
              RowDefinitions="*,Auto"
              Padding="16">

            <CollectionView
                x:Name="MessagesView"
                ItemsSource="{Binding Messages}"
                ItemsUpdatingScrollMode="KeepScrollOffset"
                Scrolled="OnMessagesScrolled"
                VerticalScrollBarVisibility="Never"
                HorizontalScrollBarVisibility="Never">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,6">

                            <Frame Padding="12"
                                   CornerRadius="16"
                                   HasShadow="False"
                                   MaximumWidthRequest="520"
                                   HorizontalOptions="{Binding IsOutgoing, Converter={StaticResource BoolToLayoutConverter}}"
                                   BackgroundColor="{Binding IsOutgoing, Converter={StaticResource BoolToColorConverter}}">

                                <VerticalStackLayout Spacing="4">

                                    <!-- SELECTABLE MESSAGE TEXT -->
                                    <Label Text="{Binding Content}"
                                           TextColor="White"
                                           LineBreakMode="WordWrap"
                                           IsTextSelectionEnabled="True" />

                                    <Label Text="{Binding Timestamp, Converter={StaticResource ChatTimestampConverter}}"
                                           FontSize="10"
                                           TextColor="#CCCCCC"
                                           HorizontalOptions="End" />
                                </VerticalStackLayout>

                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

            <!-- MESSAGE INPUT -->
            <Grid Grid.Row="1"
                  ColumnDefinitions="*,Auto"
                  Margin="0,12,0,0">

                <Entry Text="{Binding OutgoingMessage}"
                       Placeholder="Type a messageâ€¦"
                       BackgroundColor="#2A2A2A"
                       TextColor="White"
                       HeightRequest="44"
                       ReturnType="Send"
                       Completed="OnMessageEntryCompleted" />

                <Button Grid.Column="1"
                        Text="Send"
                        Command="{Binding SendMessageCommand}"
                        Margin="8,0,0,0"
                        BackgroundColor="#6B5DD3"
                        TextColor="White"
                        CornerRadius="10" />
            </Grid>

        </Grid>
    </Grid>
</ContentPage>
