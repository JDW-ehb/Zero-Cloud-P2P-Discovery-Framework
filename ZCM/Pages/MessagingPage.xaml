<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ZCM.Pages.MessagingPage"
    Title="Messaging">

    <Grid RowDefinitions="Auto,Auto,*,Auto"
          Padding="10"
          BackgroundColor="#1e1e1e">

        <!-- Hosting -->
        <HorizontalStackLayout Spacing="10">
            <Entry
                Placeholder="Host Port"
                Text="{Binding HostPort}"
                Keyboard="Numeric"
                WidthRequest="120" />

            <Button
                Text="Start Hosting"
                Command="{Binding StartHostingCommand}" />
        </HorizontalStackLayout>

        <!-- Connect -->
        <HorizontalStackLayout
            Grid.Row="1"
            Spacing="10"
            Margin="0,10,0,10">

            <Entry
                Placeholder="Remote IP"
                Text="{Binding RemoteIp}"
                WidthRequest="160" />

            <Entry
                Placeholder="Port"
                Text="{Binding RemotePort}"
                Keyboard="Numeric"
                WidthRequest="100" />

            <Button
                Text="Connect"
                Command="{Binding ConnectCommand}" />
        </HorizontalStackLayout>

        <!-- Messages -->
        <CollectionView
            Grid.Row="2"
            ItemsSource="{Binding Messages}">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Padding="10"
                        Margin="5"
                        CornerRadius="10"
                        BackgroundColor="#2b2b2b">

                        <VerticalStackLayout>
                            <Label
                                Text="{Binding FromPeer}"
                                FontSize="12"
                                TextColor="#8bc34a" />

                            <Label
                                Text="{Binding Content}"
                                FontSize="16"
                                TextColor="White" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Send -->
        <Grid Grid.Row="3"
              ColumnDefinitions="*,Auto"
              Margin="0,10,0,0">

            <Entry
                Text="{Binding OutgoingMessage}"
                Placeholder="Type a messageâ€¦" />

            <Button
                Grid.Column="1"
                Text="Send"
                Command="{Binding SendMessageCommand}" />
        </Grid>

    </Grid>
</ContentPage>
