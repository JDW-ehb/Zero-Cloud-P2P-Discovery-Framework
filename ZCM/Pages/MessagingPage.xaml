<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ZCM.ViewModels"
    xmlns:conv="clr-namespace:ZCM.Converters"
    x:Class="ZCM.Pages.MessagingPage"
    BackgroundColor="#1e1e1e">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:BoolToColorConverter x:Key="BoolToColorConverter" />
            <conv:BoolToLayoutConverter x:Key="BoolToLayoutConverter" />
            <conv:ChatTimestampConverter x:Key="ChatTimestampConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="320,*"
          RowDefinitions="*"
          Padding="0">

        <!-- LEFT: CONVERSATIONS -->
        <Grid Grid.Column="0"
              RowDefinitions="Auto,Auto,*"
              Padding="16"
              BackgroundColor="#151515">

            <Label
                Text="Messaging"
                FontSize="22"
                TextColor="White" />

            <Grid Grid.Row="1" ColumnDefinitions="*" Margin="0,10,0,10">
                <Label
                    Text="{Binding StatusMessage}"
                    FontSize="12"
                    TextColor="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                    VerticalOptions="Center" />
            </Grid>

            <CollectionView Grid.Row="2"
                            ItemsSource="{Binding Conversations}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedConversation}"
                            VerticalScrollBarVisibility="Never"
                            HorizontalScrollBarVisibility="Never"
                            >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="12"
                               Margin="0,6"
                               CornerRadius="14"
                               HasShadow="False"
                               BackgroundColor="#1F1F1F">
                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                                <!-- Online dot -->
                                <BoxView WidthRequest="10" HeightRequest="10"
                                         CornerRadius="5"
                                         Color="{Binding IsOnline, Converter={StaticResource BoolToColorConverter}}"
                                         VerticalOptions="Center" />

                                <!-- Name -->
                                <Label Grid.Column="1"
                                       Text="{Binding DisplayName}"
                                       TextColor="White"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       LineBreakMode="TailTruncation"/>

                                <!-- Time -->
                                <Label Grid.Column="2"
                                       Text="{Binding LastTimestamp, Converter={StaticResource ChatTimestampConverter}}"
                                       TextColor="#AAAAAA"
                                       FontSize="11"
                                       HorizontalOptions="End" />

                                <!-- Last message preview -->
                                <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                       Text="{Binding LastMessage}"
                                       TextColor="#CCCCCC"
                                       FontSize="12"
                                       LineBreakMode="TailTruncation" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <!-- RIGHT: CHAT -->
        <Grid Grid.Column="1"
              RowDefinitions="*,Auto"
              Padding="16">

            <CollectionView
                ItemsSource="{Binding Messages}"
                VerticalOptions="FillAndExpand"
                Margin="12"
                ItemsUpdatingScrollMode="KeepLastItemInView"
                VerticalScrollBarVisibility="Never"
                HorizontalScrollBarVisibility="Never">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,6">
                            <Frame
                                Padding="12"
                                CornerRadius="16"
                                HasShadow="False"
                                MaximumWidthRequest="520"
                                HorizontalOptions="{Binding IsOutgoing, Converter={StaticResource BoolToLayoutConverter}}"
                                BackgroundColor="{Binding IsOutgoing, Converter={StaticResource BoolToColorConverter}}">

                                <VerticalStackLayout Spacing="4">
                                    <Label Text="{Binding Content}"
                                           TextColor="White"
                                           LineBreakMode="WordWrap" />

                                    <Label Text="{Binding Timestamp, Converter={StaticResource ChatTimestampConverter}}"
                                           FontSize="10"
                                           TextColor="#CCCCCC"
                                           HorizontalOptions="End" />
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

            <Grid Grid.Row="1"
                  ColumnDefinitions="*,Auto"
                  Padding="0">

                <Entry Grid.Column="0"
                       Text="{Binding OutgoingMessage}"
                       Placeholder="Type a message..."
                       BackgroundColor="#2A2A2A"
                       TextColor="White"
                       HeightRequest="44" />

                <Button Grid.Column="1"
                        Text="Send"
                        Command="{Binding SendMessageCommand}"
                        BackgroundColor="#6B5DD3"
                        TextColor="White"
                        CornerRadius="10"
                        Margin="8,0,0,0" />
            </Grid>
        </Grid>

    </Grid>
</ContentPage>
