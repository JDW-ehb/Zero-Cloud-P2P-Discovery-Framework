<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ZCM.Pages.MessagingPage"
    Title="Messaging"
    BackgroundColor="#1e1e1e">

    <Grid RowDefinitions="Auto,Auto,*,Auto"
          Padding="15">

        <!-- Host toggle -->
        <HorizontalStackLayout Spacing="10">
            <Label Text="Host session"
                   TextColor="White"
                   VerticalOptions="Center" />
            <Switch IsToggled="{Binding IsHosting}" />
            <Button Text="Start Hosting"
                    Command="{Binding HostCommand}" />
        </HorizontalStackLayout>

        <!-- Peer selector -->
        <HorizontalStackLayout Grid.Row="1"
                               Spacing="10"
                               Margin="0,10,0,10">

            <Picker Title="Select peer"
                    ItemsSource="{Binding AvailablePeers}"
                    ItemDisplayBinding="{Binding ProtocolPeerId}"
                    SelectedItem="{Binding SelectedPeer}"
                    WidthRequest="220" />

            <Button Text="Connect"
                    Command="{Binding ConnectCommand}" />
        </HorizontalStackLayout>

        <!-- Messages -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Messages}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10"
                           Margin="5"
                           BackgroundColor="#2b2b2b"
                           CornerRadius="12">
                        <Label Text="{Binding Content}"
                               TextColor="White" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Send -->
        <Grid Grid.Row="3"
              ColumnDefinitions="*,Auto"
              Margin="0,10,0,0">

            <Entry Text="{Binding OutgoingMessage}"
                   Placeholder="Type a messageâ€¦"
                   TextColor="White"
                   BackgroundColor="#2b2b2b"
                   HeightRequest="44" />

            <Button Grid.Column="1"
                    Text="Send"
                    Command="{Binding SendMessageCommand}"
                    Margin="10,0,0,0" />
        </Grid>

    </Grid>
</ContentPage>
