<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ZCM.ViewModels"
    xmlns:conv="clr-namespace:ZCM.Converters"
    x:Class="ZCM.Pages.MessagingPage"
    BackgroundColor="#1e1e1e">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:BoolToColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- ROOT GRID -->
    <Grid ColumnDefinitions="260,*"
          RowDefinitions="*"
          Padding="0">

        <!-- ===================== -->
        <!-- LEFT CONTROL PANEL -->
        <!-- ===================== -->
        <VerticalStackLayout
            Grid.Column="0"
            Padding="16"
            Spacing="12"
            BackgroundColor="#151515">

            <Label
                Text="Messaging"
                FontSize="22"
                TextColor="White" />

            <Label
                Text="{Binding StatusMessage}"
                FontSize="12"
                TextColor="LightGray" />

            <Button
                Text="Start Hosting"
                Command="{Binding HostCommand}"
                BackgroundColor="{Binding IsHosting, Converter={StaticResource BoolToColorConverter}}"
                TextColor="White"
                CornerRadius="8" />

            <Label
                Text="Select peer"
                FontSize="12"
                TextColor="#CCCCCC" />

            <Picker
                ItemsSource="{Binding AvailablePeers}"
                ItemDisplayBinding="{Binding HostName}"
                SelectedItem="{Binding SelectedPeer}"
                BackgroundColor="#2A2A2A"
                TextColor="White" />

            <Button
                Text="Connect"
                Command="{Binding ConnectCommand}"
                BackgroundColor="#6B5DD3"
                TextColor="White"
                CornerRadius="8" />
        </VerticalStackLayout>

        <!-- ===================== -->
        <!-- CHAT AREA -->
        <!-- ===================== -->
        <Grid Grid.Column="1"
              RowDefinitions="*,Auto"
              Padding="16">

            <!-- MESSAGES -->
            <CollectionView
                ItemsSource="{Binding Messages}"
                Margin="0,0,0,12">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Padding="10"
                            Margin="5"
                            BackgroundColor="{Binding IsLocal, Converter={StaticResource MessageColorConverter}}"
                            HorizontalOptions="{Binding IsLocal, Converter={StaticResource MessageAlignmentConverter}}">
                            <Label
                                Text="{Binding Content}"
                                TextColor="Black" />
                        </Frame>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- INPUT BAR -->
            <Grid Grid.Row="1"
                  ColumnDefinitions="*,Auto"
                  Padding="0">

                <Entry
                    Grid.Column="0"
                    Text="{Binding OutgoingMessage}"
                    Placeholder="Type a message..."
                    BackgroundColor="#2A2A2A"
                    TextColor="White"
                    HeightRequest="44" />

                <Button
                    Grid.Column="1"
                    Text="Send"
                    Command="{Binding SendMessageCommand}"
                    BackgroundColor="#6B5DD3"
                    TextColor="White"
                    CornerRadius="8"
                    Margin="8,0,0,0" />
            </Grid>
        </Grid>

    </Grid>
</ContentPage>
