<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ZCM.Pages.PeerDetailsPage"
    BackgroundColor="#80000000"
    Padding="0">

    <Grid>
        <!-- BACKDROP (click outside to close) -->
        <BoxView BackgroundColor="Transparent">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBackdropTapped"/>
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- MODAL CARD -->
        <Frame
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="700"
            Padding="24"
            CornerRadius="18"
            HasShadow="True"
            BackgroundColor="#1F1F1F">

            <VerticalStackLayout Spacing="14">

                <!-- HEADER -->
                <Grid ColumnDefinitions="*,Auto">
                    <Label
                        Text="{Binding HostName}"
                        FontSize="20"
                        FontAttributes="Bold"
                        TextColor="White"/>

                    <Button
                        Grid.Column="1"
                        Text="âœ•"
                        Clicked="OnCloseClicked"
                        BackgroundColor="#2A2A2A"
                        TextColor="White"
                        CornerRadius="10"
                        Padding="10,6"/>
                </Grid>

                <!-- STATUS -->
                <Label
                    Text="{Binding StatusText}"
                    TextColor="#CCCCCC"/>

                <!-- CORE INFO -->
                <Grid ColumnDefinitions="*,*"
                      RowDefinitions="Auto,Auto,Auto"
                      ColumnSpacing="16"
                      RowSpacing="8">

                    <Label Text="ProtocolPeerId" TextColor="#AAAAAA"/>
                    <Label Grid.Column="1"
                           Text="{Binding ProtocolPeerId}"
                           TextColor="White"/>

                    <Label Grid.Row="1" Text="IP Address" TextColor="#AAAAAA"/>
                    <Label Grid.Row="1" Grid.Column="1"
                           Text="{Binding IpAddress}"
                           TextColor="White"/>

                    <Label Grid.Row="2" Text="PeerId" TextColor="#AAAAAA"/>
                    <Label Grid.Row="2" Grid.Column="1"
                           Text="{Binding PeerId}"
                           TextColor="White"/>
                </Grid>

                <!-- SEEN INFO -->
                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="16"
                      Margin="0,6,0,0">

                    <Label
                        Text="{Binding FirstSeen, StringFormat='First seen: {0:dd/MM/yyyy HH:mm}'}"
                        TextColor="#BBBBBB"/>

                    <Label
                        Grid.Column="1"
                        Text="{Binding LastSeenText}"
                        HorizontalTextAlignment="End"
                        TextColor="#BBBBBB"/>
                </Grid>

                <!-- SERVICES -->
                <Label
                    Text="Services"
                    Margin="0,10,0,0"
                    FontSize="16"
                    FontAttributes="Bold"
                    TextColor="White"/>

                <!-- NO SERVICES -->
                <Label
                    Text="No services announced."
                    IsVisible="{Binding HasServices, Converter={x:Reference False}}"
                    TextColor="#999999"/>

                <!-- SERVICES GRID -->
                <CollectionView
                    ItemsSource="{Binding Services}"
                    IsVisible="{Binding HasServices}"
                    SelectionMode="None">

                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            Orientation="Vertical"
                            Span="4"/>
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Text="{Binding .}"
                                FontSize="12"
                                Padding="10,6"
                                Margin="6"
                                CornerRadius="14"
                                BackgroundColor="#2A2A2A"
                                TextColor="White"
                                Clicked="OnServiceClicked"/>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
