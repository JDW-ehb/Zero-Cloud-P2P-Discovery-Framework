<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZCM.DiscoveryPage"
             Title="DiscoveryPage">
    <VerticalStackLayout>
        <Label 
            Text="Discover"
            FontAttributes="Bold"
            FontSize="40"
            
            VerticalOptions="Center" 
            
            HorizontalOptions="Center" />
        <Button
    x:Name="BackButton"
    Text="Back" 
    SemanticProperties.Hint="Goes back to the previous page"
    Clicked="BackButton_Clicked"
    HorizontalOptions="Fill" />
        
        <CollectionView ItemsSource="{Binding Peers}">
            <!-- Grid layout: 4 items per row -->
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="4" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="LightGray" StrokeThickness="1" Padding="10" Margin="5">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="5" />
                        </Border.StrokeShape>
                        <VerticalStackLayout>

                            <!-- Peer info -->
                            <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" />
                            <Label Text="{Binding Address}" FontSize="14" TextColor="Gray" />
                            <Label Text="{Binding LastSeenSeconds}" FontSize="12" TextColor="DarkGray" />

                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>